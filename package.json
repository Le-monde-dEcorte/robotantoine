{
	"name": "sleepymaid-ts",
	"version": "1.0.0",
	"description": "",
	"private": true,
	"main": "dist/index.js",
	"scripts": {
		"test": "yarn run lint && yarn run build",
		"build": "yarn rimraf dist/ && yarn tsc",
		"lint": "yarn eslint --fix --ext js,jsx,ts,tsx src",
		"testlint": "yarn eslint --ext js,jsx,ts,tsx src",
		"format": "yarn prettier --write .",
		"start": "yarn build && node --trace-warnings -r source-map-support/register dist/index.js"
	},
	"author": "Ecorte",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^16.10.3",
		"@types/prettier": "^2.4.2",
		"@typescript-eslint/eslint-plugin": "^5.4.0",
		"@typescript-eslint/parser": "^5.4.0",
		"@yarnpkg/cli-dist": "^3.1.0",
		"discord-api-types": "^0.24.0",
		"eslint": "^8.4.0",
		"eslint-config-prettier": "^8.3.0",
		"prettier": "^2.4.1",
		"rimraf": "^3.0.2",
		"source-map-support": "^0.5.21",
		"typescript": "^4.5.2"
	},
	"dependencies": {
		"@discordjs/builders": "^0.8.2",
		"@discordjs/rest": "^0.1.0-canary.0",
		"ansi-colors": "^4.1.1",
		"axios": "^0.24.0",
		"discord.js": "^13.3.1",
		"fs": "^0.0.1-security",
		"mongoose": "^6.0.13",
		"murmurhash-v3": "^1.0.2"
	},
	"prettier": {
		"useTabs": true,
		"quoteProps": "consistent",
		"singleQuote": true,
		"semi": false,
		"trailingComma": "none",
		"endOfLine": "lf",
		"bracketSpacing": true,
		"arrowParens": "always"
	},
	"eslintConfig": {
		"env": {
			"es2021": true,
			"node": true
		},
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/recommended",
			"prettier"
		],
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"ecmaVersion": 12,
			"sourceType": "module"
		},
		"plugins": [
			"@typescript-eslint"
		],
		"ignorePatterns": [
			"dist"
		],
		"rules": {
			"no-return-await": "off",
			"@typescript-eslint/no-empty-interface": "warn",
			"no-mixed-spaces-and-tabs": "warn",
			"no-duplicate-imports": "warn",
			"no-empty-function": "warn",
			"@typescript-eslint/no-empty-function": "warn",
			"no-empty": "warn",
			"@typescript-eslint/explicit-module-boundary-types": "off",
			"@typescript-eslint/ban-ts-comment": [
				"warn",
				{
					"ts-expect-error": "allow-with-description",
					"ts-ignore": "allow-with-description",
					"ts-nocheck": "allow-with-description",
					"ts-check": "allow-with-description",
					"minimumDescriptionLength": 5
				}
			]
		}
	},
	"packageManager": "yarn@3.1.1"
}
