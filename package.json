{
	"name": "sleepymaid",
	"version": "0.0.0",
	"repository": "https://github.com/sleepymaidbot/sleepymaid.git",
	"author": "Ecorte",
	"license": "MIT",
	"private": true,
	"workspaces": [
		"services/*",
		"packages/*"
	],
	"packageManager": "yarn@3.2.4",
	"scripts": {
		"build": "yarn turbo run build",
		"lint": "yarn eslint --fix --ext ts,tsx",
		"format": "yarn prettier --write . --plugin-search-dir=. .",
		"prepare": "husky install",
		"publish": "yarn run build && yarn changeset publish"
	},
	"devDependencies": {
		"@changesets/cli": "^2.25.0",
		"@types/prettier": "2.7.1",
		"@typescript-eslint/eslint-plugin": "5.39.0",
		"@typescript-eslint/parser": "5.39.0",
		"@yarnpkg/cli-dist": "^3.2.4",
		"eslint": "^8.24.0",
		"eslint-config-neon": "^0.1.34",
		"eslint-config-prettier": "8.5.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-typescript-sort-keys": "^2.1.0",
		"husky": "^8.0.1",
		"prettier": "2.7.1",
		"prisma": "4.4.0",
		"rimraf": "^3.0.2",
		"turbo": "1.5.5",
		"typescript": "4.8.4"
	}
}
