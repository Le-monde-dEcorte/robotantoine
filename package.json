{
	"name": "sleepymaid",
	"version": "0.0.0",
	"repository": "https://github.com/Le-monde-dEcorte/sleepymaid-ts.git",
	"author": "Ecorte",
	"license": "MIT",
	"private": true,
	"workspaces": [
		"services/*",
		"packages/*"
	],
	"volta": {
		"node": "16.15.1",
		"yarn": "1.22.19"
	},
	"packageManager": "yarn@3.2.1",
	"devDependencies": {
		"@types/prettier": "2.6.3",
		"@typescript-eslint/eslint-plugin": "5.28.0",
		"@typescript-eslint/parser": "5.28.0",
		"@yarnpkg/cli-dist": "^3.2.1",
		"eslint": "8.17.0",
		"eslint-config-prettier": "8.5.0",
		"husky": "8.0.1",
		"prettier": "2.7.0",
		"prisma": "3.15.1",
		"rimraf": "^3.0.2",
		"turbo": "1.2.16",
		"typescript": "4.7.3"
	},
	"scripts": {
		"build": "yarn turbo run build --filter='!@sleepymaid/website'",
		"buildbot": "yarn turbo run build --filter=@sleepymaid/bot",
		"buildconfig": "yarn turbo run build --filter='@sleepymaid/config'",
		"buildpackages": "yarn turbo run build --filter='@sleepymaid/config' --filter='@sleepymaid/handler' --filter='@sleepymaid/localizer' --filter='@sleepymaid/logger' --filter='@sleepymaid/util'",
		"start": "yarn turbo run start --filter=@sleepymaid/bot",
		"starthelper": "yarn turbo run start --filter=@sleepymaid/helper",
		"starttest": "yarn turbo run start --filter=@sleepymaid/testbot",
		"lint": "yarn eslint --fix --ext ts,tsx packages",
		"testlint": "yarn eslint --ext ts,tsx packages",
		"format": "yarn prettier --write .",
		"prepare": "husky install"
	}
}
