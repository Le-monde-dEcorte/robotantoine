{
	"name": "sleepymaid-ts",
	"version": "1.0.0",
	"description": "",
	"main": "dist/index.js",
	"scripts": {
		"test": "yarn run lint && yarn run build",
		"build": "yarn rimraf dist/ && yarn tsc",
		"lint": "yarn eslint --ext js,jsx,ts,tsx src",
		"format": "yarn prettier --write .",
		"start": "yarn build && node --trace-warnings -r source-map-support/register dist/index.js"
	},
	"author": "Ecorte",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^15.14.0",
		"@types/prettier": "^2",
		"@typescript-eslint/eslint-plugin": "^4.28.1",
		"@typescript-eslint/parser": "^4.28.1",
		"eslint": "^7.29.0",
		"eslint-config-prettier": "^8.3.0",
		"prettier": "^2.3.2",
		"rimraf": "^3.0.2",
		"source-map-support": "^0.5.19",
		"tsc-watch": "^4.4.0",
		"typescript": "^4.3.5"
	},
	"dependencies": {
		"discord-akairo": "Le-monde-dEcorte/discord-akairo",
		"discord-api-types": "^0.18.1",
		"discord.js": "discordjs/discord.js",
		"monk": "^7.3.4",
		"yup": "^0.32.9"
	},
	"prettier": {
		"useTabs": true,
		"quoteProps": "consistent",
		"singleQuote": true,
		"trailingComma": "none",
		"endOfLine": "lf"
	},
	"eslintConfig": {
		"env": {
			"es2021": true,
			"node": true
		},
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/recommended",
			"prettier"
		],
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"ecmaVersion": 12,
			"sourceType": "module"
		},
		"plugins": [
			"@typescript-eslint"
		],
		"ignorePatterns": [
			"dist"
		]
	}
}
