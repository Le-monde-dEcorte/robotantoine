{
	"name": "sleepymaid",
	"version": "0.0.0",
	"repository": "https://github.com/Le-monde-dEcorte/sleepymaid-ts.git",
	"author": "Ecorte",
	"license": "MIT",
	"private": true,
	"workspaces": [
		"services/*",
		"packages/*"
	],
	"volta": {
		"node": "16.15.0",
		"yarn": "1.22.18"
	},
	"packageManager": "yarn@3.2.0",
	"devDependencies": {
		"@types/prettier": "2.6.0",
		"@typescript-eslint/eslint-plugin": "5.22.0",
		"@typescript-eslint/parser": "5.22.0",
		"@yarnpkg/cli-dist": "^3.2.0",
		"eslint": "8.14.0",
		"eslint-config-prettier": "8.5.0",
		"husky": "7.0.4",
		"prettier": "2.6.2",
		"prisma": "3.13.0",
		"rimraf": "^3.0.2",
		"turbo": "1.2.8",
		"typescript": "4.6.4"
	},
	"scripts": {
		"build": "yarn turbo run build",
		"start": "yarn turbo run start --filter=@sleepymaid/bot",
		"starthelper": "yarn turbo run start --filter=@sleepymaid/helper",
		"starttest": "yarn turbo run start --filter=@sleepymaid/testbot",
		"lint": "yarn eslint --fix --ext ts,tsx packages",
		"testlint": "yarn eslint --ext ts,tsx packages",
		"format": "yarn prettier --write .",
		"prepare": "husky install"
	}
}
