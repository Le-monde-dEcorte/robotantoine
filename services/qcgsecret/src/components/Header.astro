---
import { BsLink45Deg } from '@react-icons/all-files/bs/BsLink45Deg';
export interface Props {
	title: string;
	id: string;
}

const { title, id } = Astro.props;
---

<div id={id} class="header-component">
	<div class="component-aligned">
		<span>
			<h1>{title}</h1>
		</span>
		<span class="component-icon">
			{' '}
			<a class="anchor-icon" href=`#${id}`>
				<BsLink45Deg size={20} />
			</a>
		</span>
	</div>
	<p><slot /></p>
</div>
<style>
	.header-component {
		background-color: rgb(0, 0, 0);
		padding-top: 12vmin;
		padding-bottom: 12vmin;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		text-align: center;
	}

	.component-aligned {
		display: flex;
		align-items: center;
		text-align: center;
	}

	.component-icon {
		margin-left: 10px;
		margin-top: 10px;
	}

	.anchor-icon {
		text-decoration: none;
		color: white;
	}
</style>
