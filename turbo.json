{
	"$schema": "https://turborepo.org/schema.json",
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", "types/**"]
		},
		"start": {
			"dependsOn": ["^build"],
			"outputs": []
		},
		"lint": {
			"dependsOn": [],
			"outputs": []
		},
		"format": {
			"outputs": []
		},
		"test": {
			"dependsOn": ["^build"],
			"outputs": []
		}
	}
}
